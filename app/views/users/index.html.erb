<div class="container user-card index-user">
  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td width="20%"><%= user.first_name %></td>
          <td width="20%"><%= user.last_name %></td>
          <td width="10%"><%= link_to 'Show', user, class: 'btn btn-default' %></td>
          <td width="10%"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %></td>
          <td width="10%"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
</div>
