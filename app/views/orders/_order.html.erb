<%= link_to order, :action => 'go' do %>
  <div class="container order-card">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 col-md-3 col-md-offset-0">
      <%= image_tag( order.product.image_url , class:"img-responsive", alt: order.product.description) %>
      </div>
      <div class="col-xs-12 col-md-9 order-info-index">
        <div class="row">
          <div class="row">
            <p class="col-md-12"><strong>Order No.: </strong><%= order.id %></p>
          </div> <!-- end row -->
          <div class="row">
            <p class="col-xs-12 col-md-6"><strong>Item: </strong><%= order.product.name %></p>
            <p class="col-xs-12 col-md-6"><strong>Total: <%= number_to_currency(order.total.to_f, :unit=>'â‚¬ ') %></strong></p>
          </div> <!-- end row -->

        </div> <!-- end row -->
      </div>
    </div> <!-- end row -->
  </div> <!-- end container -->
<% end %>
