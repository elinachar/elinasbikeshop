<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 product">
      <%= image_tag( @product.image_url , class: "img-responsive img-show", alt: "wooden bike") %>
    </div>

    <div class="col-sm-12 col-md-4">
        <h2><strong><%= @product.name %></strong></h2>
        <p><%= @product.description %></p>
        <p>Color: <%= @product.colour%></p>
        <% if @product.price %>
        <p><strong>Price: &euro;<%='%.2f' % @product.price%></strong></p>
        <% end %>

    </div>
  </div> <!-- end row -->
</div> <!-- end container -->


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
