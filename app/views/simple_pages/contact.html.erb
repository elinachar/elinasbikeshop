<div class="container-fluid contact">
  <h1>Contact</h1>
  <p>If you have any queries please contact us!</p>
  <address>
    <h2 class="typo-kalam" style="text-align:left">Elina's Bike Shop</h2>
    <p><span class="glyphicon glyphicon-map-marker"></span>Sourgiadaki 8-10, 71306 Heraklion, Crete, Greece</p>
    <p><span class="glyphicon glyphicon-phone"></span> +30 694 8510515</p>
    <p><span class="glyphicon glyphicon-envelope"></span> <a href="mailto:elinachar@gmail.com">elinachar@gmail.com</a></p>
  </address>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
    <div class="row">
      <div class="form-group">
        <%= form.label :name, class: "sr-only" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Name *", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :email, class: "sr-only" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Email *", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :message, class: "sr-only"  %>
        <%= form.text_area :message, class: "form-control", placeholder: "Message *", rows: 5, required: true %>
      </div>

      <%= form.submit "Send", class: "btn btn-default" %>
    </div>

  <% end %>


</div> <!-- end container -->
