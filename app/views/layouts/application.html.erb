<!DOCTYPE html>
<html>
  <head>
    <title>ElinasBikeShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Font awesome Iconts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>

  <body>
    <!--navbar starts here-->
     <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
       <div class="container-fluid">
         <div class="navbar-header">
             <button type="button" class="navbar-toggle" data-toggle="collapse"
             data-target=".navbar-collapse">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
             </button>
             <%= link_to "Elina's Bike Shop", root_path, { :class=>"navbar-brand navbar-left" }  %>
         </div> <!-- end navbar-header -->

         <div class="collapse navbar-collapse">
           <ul class="nav navbar-nav nav-color">
             <li><%= link_to "About", simple_pages_about_path %></li>
             <li><%= link_to "Contact", simple_pages_contact_path %></li>
             <li><%= link_to "Products", products_path %></li>
             <li><%= link_to "Orders", orders_path %></li>
           </ul>
           <form class="navbar-form navbar-right">
             <div class="form-group">
               <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
                <%= form.text_field :q, id: 'q', value: params[:q], placeholder: "Search", class: 'form-control' %>
                <!-- <%= form.submit raw('<span class="glyphicon glyphicon-search"></span>'), class: 'btn btn-default' %> -->
                <!-- <%= form.submit '<span class="glyphicon glyphicon-search"></span>'.html_safe, class: 'btn btn-default' %> -->
                <%= form.submit 'Submit', class: 'btn btn-default' %>
               <% end %>
             </div>
           </form>
         </div> <!-- end navbar-collapse -->
       </div> <!-- end container navbar -->
     </nav> <!-- end navbar-->
     <!-- navbar ends here -->

    <!-- main body here -->
    <div class="anchor">
     <%= yield %>
    </div>

    <!-- footer starts here -->
    <footer>
      <div class="container-fluid">
        &copy; 2018 Elina Charalampous
      </div> <!-- end container-fluid -->
    </footer>
    <!-- footer ends here -->
  </body>
</html>
